#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;

int main() {
    const int m = 4, n = 6;
    int massive[m][n];

    srand(time(0));

    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            massive[i][j] = rand() % 10;
            cout << massive[i][j] << "\t";
        }
        cout << "\n";
    }

    for (int j = 0; j < n; j++) {
        int sum_col = 0;
        for (int i = 0; i < m; i++) {
            sum_col += massive[i][j];

        }
        cout << "\n";
        cout << "Sum of elements in row " << j + 1 << ": " << sum_col << "\n";
    }
}
