#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;

int main() {
    const int m = 4, n = 3;
    int massive[m][n];

    srand(time(0));

    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            massive[i][j] = rand() % 10;
            cout << massive[i][j] << "\t";
        }
        cout << "\n";
    }

    cout << "\n";

    for (int i = 0; i < m; i++) {

        int even_in_row = 0;

        for (int j = 0; j < n; j++) {
            if (massive[i][j] % 2 == 0 && massive[i][j] != 0) {
                even_in_row++;
            }
        }

        cout << "Even numbers in row " << i+1 << ": " << even_in_row << "\n";
    }
}
